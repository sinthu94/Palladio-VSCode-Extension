{
	"name": "palladio",
	"displayName": "Palladio",
	"description": "Palladio support for VS Code",
	"version": "0.0.1",
	"author": {
		"name": "Sinthujan Senthilrajah"
	},
	"engines": {
		"vscode": "^1.46.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:palladio"
	],
	"main": "./out/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "palladio",
				"aliases": [
					"palladio",
					"Palladio"
				],
				"extensions": [
					".tpcm"
				]
			}
		],
		"configuration": {
			"title": "Palladio",
			"properties": {
				"palladio.server.javaHome": {
					"scope": "resource",
					"type": "String",
					"default": "/usr/lib/jvm/adoptopenjdk-11-hotspot-amd64",
					"description": "Path to Java Home for starting the language server."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.46.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.30.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"vscode-languageclient": "^6.1.3"
	}
}
