{
	"name": "palladio",
	"displayName": "Palladio",
	"description": "Palladio support for VS Code",
	"version": "0.0.1",
	"publisher": "KIT",
	"icon": "media/palladio.png",
	"galleryBanner": {
		"color": "#C80000",
		"theme": "dark"
	},
	"author": {
		"name": "Sinthujan Senthilrajah"
	},
	"repository": {},
	"engines": {
		"vscode": "^1.46.0"
	},
	"categories": [
		"Programming Languages",
		"Snippets",
		"Formatters"
	],
	"activationEvents": [
		"onLanguage:palladio"
	],
	"main": "./out/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "palladio",
				"aliases": [
					"palladio",
					"Palladio"
				],
				"extensions": [
					".tpcm"
				],
				"configuration": "./syntaxes/language-configuration.json"
			}
		],
		"configuration": {
			"title": "Palladio",
			"properties": {
				"palladio.javaHome": {
					"scope": "resource",
					"type": "String",
					"default": "",
					"description": "Path to Java Home for starting the language server."
				},
				"palladio.languageServer": {
					"scope": "resource",
					"type": "String",
					"default": "",
					"description": "Path to jar file of language server."
				}
			}
		},
		"grammars": [
			{
				"language": "palladio",
				"scopeName": "source.palladio",
				"path": "./syntaxes/palladio.tmLanguage.json"
			}
		],
		"snippets": [
			{
				"language": "palladio",
				"path": "./snippets/palladio.snippets.json"
			}
		]
	},
	"scripts": {
		"deploy": "vsce publish",
		"package": "vsce package",
		"vscode:prepublish": "webpack --mode production",
		"webpack": "webpack --mode development",
		"webpack-dev": "webpack --mode development --watch",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"@types/vscode": "^1.46.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"@typescript-eslint/parser": "^2.30.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"mocha": "^7.2.0",
		"ts-loader": "^8.0.1",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0",
		"webpack": "^4.43.0",
		"webpack-cli": "^3.3.12"
	},
	"dependencies": {
		"node": "^14.5.0",
		"vsce": "^1.77.0",
		"vscode-languageclient": "^6.1.3"
	}
}
