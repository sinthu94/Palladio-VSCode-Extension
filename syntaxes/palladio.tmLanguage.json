{
    "scopeName": "source.palladio",
    "fileTypes": [ "tpcm" ],
    "foldingStartMarker": "\\{\\s*$", 
    "foldingStopMarker": "^\\s*\\}", 
    "name": "Palladio",
    "patterns": [
      {
        "include": "#entities"
      },
      {
        "include": "#keywords"
      }, 
      {
        "include": "#storages"
      },
      {
        "include": "#lambda-expression"
      },
      {
        "include": "#supports"
      },
      {
        "include": "#operator"
      }
    ],

    "repository": {
      "entities": {
        "patterns": [
          
        ]
      },
      "keywords": {
        "patterns": [
          {
            "name": "keyword.declaration.palladio",
            "match": "component|datatype|failure|interface|assembly|connector|internal|provides|requires|seff|alloc|container" 
          },
          {
            "name": "keyword.control.palladio",
            "match": "loop|iterate|if|else|random|failure|processing|link|raises" 
          },
          {
            "name": "keyword.control.import.palladio",
            "match": "import" 
          }
        ]
      },
      "storages": {
        "patterns": [
          {
            "name": "storage.type.class.palladio",
            "match": "allocation|repository|resourceenvironment|resourcetypes|system|usage|property|type|entity|interArrivalTime|population|delay" 
          }
        ]
      },
      "lambda-expression": {
        "patterns": [
          {
            "name": "storage.type.function.arrow.palladio",
            "match": "->"
          },
          {
            "name": "meta.declaration.id.palladio",
            "match": "::"
          }
        ]
      },
      "supports": {
        "patterns": [
          {
            "name": "support.class.palladio",
            "match": "String|STRING|BOOL|BYTE" 
          },
          {
            "name": "",
            "match": ""
          }
        ]
      },
      "operator": {
        "patterns": [
          {
            "name": "keyword.operator.palladio",
            "match": "op|ev" 
          }
        ]
      }
    }
  }
  
  
  
  
  